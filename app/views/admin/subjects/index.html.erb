<div class="use16columns">
  <div class="use16columns inner_left inner_right">    
    <div class="use10columns inner_right">
      <%= will_paginate(@subjects) %>
    </div>
  </div>
  
  <div class="use8columns inner_right">
    <table cellpadding="0" cellspacing="0">
      
      <caption>Subjects</caption>
      
      <thead style="font-size:18px">
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      
      <tbody style="font-size:14px">
        <%- @subjects.each do |subject| -%>
        <tr>
          <td><%= link_to subject.name, admin_subject_path(subject) %>
          		<%= "*" if subject.topic_volume <=30 %>
          </td>
          <td><%= edit_button(edit_admin_subject_path(subject)) %>&nbsp;&nbsp;&nbsp;
              <%= link_to "Edit Page Layout", layout_admin_subject_path(subject) %>
          </td>
        </tr>
        <%- end -%>
      </tbody>
    </table>
    <br />
	  <div class="explanation">* Widgets that will appear in the Widgets pull-down menu</div>
  </div>
  
</div>
