	<h3>Story Info</h3>
  <%= link_to_function "", "show_popdown_form()", :class => "close_panel", :title => "Minimize the Info panel" if !params[:popup] %>
	<%- if logged_in? && current_member.has_story_edit_privileges?(@story) -%>
