  <% story_sf = {:my_news_info => false, :starred => false, :gray_trustometer => true, :days_ago => true, :num_reviews => true, :toolbar_dateline => true, :toolbar_more_info => true} -%>

  <%= render :partial => "stories/story", :story => @story, :locals  => { :hide_flags => story_hf, :show_flags => story_sf, :no_li_wrapper => true } %>

	</div>
