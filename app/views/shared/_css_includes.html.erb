<%#-- Non-NT CSS --%>
<%- non_nt_css = ["blueprint/screen", "stickyfooter", "jquery-ui/ui-lightness/jquery-ui-1.8.custom"] -%>
<%= stylesheet_link_tag non_nt_css, :media => "screen, projection", :cache => "non_nt" %>
<!--[if lt IE 8]>
  <%= stylesheet_link_tag "blueprint/ie", :media => "screen, projection" %>
<![endif]-->
<%= stylesheet_link_tag "blueprint/ie", :media => "print" %>

<%#-- NT CSS --%>
<%- nt_css = ["01_base", "02_typography", "03_application", "04_forms", "05_interaction", "06_listings"] -%>
<%= stylesheet_link_tag nt_css, :media => "all", :cache => "nt" %>

<%#-- Local Site CSS --%>
<%= stylesheet_link_tag "local_sites/#{@local_site.slug}", :media => "all" if @local_site -%>
